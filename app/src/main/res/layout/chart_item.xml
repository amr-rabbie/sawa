<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical"
    android:id="@+id/cv"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:background="@drawable/item_clicked"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/delete"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:scaleType="centerInside"
                android:src="@drawable/cancel"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"

                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"


                />


            <LinearLayout
                android:id="@+id/activity_cart_item_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/activity_cart_item_image"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                     android:src="@drawable/a1"
                     />

                <LinearLayout
                    android:id="@+id/offerContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/activity_cart_item_image"
                    android:layout_marginTop="5dp"
                    android:background="@color/offerbackground"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp">

                    <TextView
                        android:id="@+id/activity_cart_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/third"
                        android:paddingLeft="@dimen/reviewcontent"
                        android:paddingRight="@dimen/reviewcontent"
                        android:paddingTop="@dimen/third"
                        android:text="7% OFF"
                        android:textColor="@color/White"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/activity_cart_item_image_container"
                >

                <solversteam.aveway.utiltes.TextViewWithFont
                    android:id="@+id/activity_cart_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/cat_text_font_size"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="sony erixon"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/activity_cart_prevPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:textColor="@color/Black"
                        android:textSize="12dp"
                        android:visibility="gone"
                        android:gravity="left"
                        />

                    <solversteam.aveway.utiltes.TextViewWithFont
                        android:id="@+id/activity_cart_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:textColor="@color/linktext"
                        android:textSize="@dimen/cat_text_font_size"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="20 egp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/quantitylayout"
                    android:orientation="horizontal"


                    >


                    <ImageView
                        android:id="@+id/activity_cart_item_qountity_mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_remove_circle_outline_black_24dp" />

                    <TextView
                        android:id="@+id/activity_cart_item_qountity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="1"
                        android:textColor="@color/Black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/activity_cart_item_qountity_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/ic_add_circle_outline_black_24dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="right"
                        >

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>







    </LinearLayout>

</android.support.v7.widget.CardView>