<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/item_clicked"
    android:id="@+id/order_items_layout_itemcontainer_linear"

    android:layout_height="wrap_content"
    android:layout_margin="2dp"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/order_items_layout_itemprice_textview"
            android:id="@+id/order_items_layout_itemname_textview"
            android:text="Subtotal" />

        <TextView
            android:id="@+id/order_items_layout_itemprice_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="10.00 EGP"
            android:textSize="20dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>