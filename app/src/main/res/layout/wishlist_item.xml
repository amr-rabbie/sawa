<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="3dp"
    android:orientation="vertical"
    android:paddingBottom="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/item_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <solversteam.aveway.utiltes.TextViewWithFont
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="Nike Black and White Running Shoe For Men"
                android:textColor="@color/Black"
                android:textSize="@dimen/cat_text_font_size"
                android:layout_gravity="left"
                android:gravity="left"
                />

            <solversteam.aveway.utiltes.TextViewWithFont
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="239.00 AED"
                android:textColor="@color/Black"
                android:textSize="@dimen/cat_text_font_size"
                android:layout_gravity="left"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/prev_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="479.00 AED"
                android:textSize="10dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="8dp"
                    android:background="@color/MainBackground"
                    android:src="@mipmap/ic_cart_outline"
                    android:padding="5dp" />



                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@color/MainBackground"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/cancel"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>