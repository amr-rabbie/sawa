<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/white"
     android:id="@+id/popup_element"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/ave"
        android:id="@+id/imageView9"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"/>
    <solversteam.aveway.utiltes.TextViewWithFont
        android:id="@+id/pop_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:text="Your Cart is empty"
/>
    <solversteam.aveway.utiltes.TextViewWithFont
        android:id="@+id/pop_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pop_text"
        android:gravity="center"
        android:textColor="@color/Black"

        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Your Cart is empty"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        android:text="@string/btnpop"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/pop"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"

        />
    <!--اذا كانت العربة فارغة ، يجب اظهار رسالة (عربة التسوق فارغة ، -->
    <!--املأها بما يحلو لك ، Your Cart is empty , Please fill it with you wish)-->
    <!--ويوجد تحتها زر يوجهك للصفحة الرئيسية (شاهد منتجاتنا واستمتع بالعروض)-->
</RelativeLayout>
</RelativeLayout>
