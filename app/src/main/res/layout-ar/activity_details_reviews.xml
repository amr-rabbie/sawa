<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sixteenth">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/Rated"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/reviewRatedtext"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_review_background"
                android:padding="@dimen/eighth">

                <TextView
                    android:id="@+id/activity_details_reviews_rated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Color"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/reviewCountOfRated"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_name_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_details_reviews_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ehab"
                android:textColor="@color/Black"
                android:textSize="@dimen/reviewRatedtext"/>

            <TextView
                android:id="@+id/activity_details_reviews_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on 23 December 2016"
                android:textSize="@dimen/reviewcontent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_container"
            android:layout_marginTop="@dimen/sixteenth"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_details_reviews_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/viewPager_margin_Top"
                android:text="@string/ReadFullReview"
                android:textColor="#018eec" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>