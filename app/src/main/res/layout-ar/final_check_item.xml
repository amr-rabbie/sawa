<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/free_shipping_text"
        android:orientation="horizontal"

        >


        <ImageView
            android:id="@+id/profile_image_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
             android:src="@drawable/ave"
           android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/profile_image_image"
            android:layout_marginRight="25dp"

            >
            <solversteam.aveway.utiltes.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mohamd"
                android:maxLines="2"
                android:id="@+id/name"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/Black"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="8dp"/>

            <solversteam.aveway.utiltes.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البائع \t "
                android:id="@+id/seller"
                android:maxLines="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="12dp"
                 android:layout_marginTop="8dp"/>
            <solversteam.aveway.utiltes.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.922"
                android:id="@+id/total_price"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_marginTop="8dp"/>
            <solversteam.aveway.utiltes.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الكمية: 1 "
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/red"
                android:id="@+id/qnt"
                android:textSize="12dp"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
