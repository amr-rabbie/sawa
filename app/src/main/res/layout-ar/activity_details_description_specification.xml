<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/third"
    android:layout_marginRight="@dimen/third"
    android:layout_marginTop="@dimen/twentyfour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_clicked">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sixteenth"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twentyfour"
                    android:orientation="vertical">

                    <solversteam.aveway.utiltes.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Description"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/descriptionTextheader"
                        foo:customFont="abc.ttf"
                        android:id="@+id/activity_details_description_text"/>

                    <WebView
                        android:id="@+id/activity_details_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"

                        android:layout_marginTop="@dimen/eighth"

                        android:textColor="@color/Black"
                        android:textSize="@dimen/descriptionTextcontent" />

                    <solversteam.aveway.utiltes.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteenth"
                        android:text="اقرا المزيد"
                        foo:customFont="abc.ttf"
                        android:id="@+id/more_desc"
                        android:textColor="@color/linktext" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/eighth"
                    android:background="@color/MainBackground" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_clicked"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sixteenth"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twentyfour"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Specifications"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/descriptionTextheader" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/eighth"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:id="@+id/activity_details_specifications_container">
                        <!--<LinearLayout-->
                            <!--android:orientation="vertical"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/activity_details_specifications"-->
                            <!--android:layout_weight="1"/>-->
                        <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:orientation="vertical"-->
                            <!--android:id="@+id/activity_details_specifications_values"-->
                            <!--android:layout_weight="1"/>-->
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixteenth"
                        android:text="@string/ReadMore"
                        android:textColor="@color/linktext" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>