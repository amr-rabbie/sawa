<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/category2_layout_container"
android:background="@drawable/item_clicked"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/activity_category_item_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activity_category_item_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                     android:id="@+id/prog"
                    style="@style/CircularProgress"
                    android:layout_marginLeft="30dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/offerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/activity_category_item_image"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/activity_category_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/third"
                    android:paddingLeft="@dimen/reviewcontent"
                    android:paddingRight="@dimen/reviewcontent"
                    android:paddingTop="@dimen/third"
                    android:text="7% OFF"
                    android:textColor="@color/White"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_marginRight="24dp">

            <solversteam.aveway.utiltes.TextViewWithFont
                android:id="@+id/activity_category_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="Nike Black and White Running Shoe For Men"
                android:textColor="@color/Black"
                android:textSize="12dp" />

            <solversteam.aveway.utiltes.TextViewWithFont
                android:id="@+id/activity_category_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="239.00 AED"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/activity_category_product_prev_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/strike_line"
                android:text="479.00 AED"
                android:visibility="invisible"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_weight="3">

                <Button
                    android:id="@+id/activity_category_product_add_to_chart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:background="@color/light_green"
                    android:text="@string/AddtoChart"
                    android:textColor="@color/White"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/activity_category_product_add_to_chart_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="7dp"
                    android:layout_weight=".5"
                    android:adjustViewBounds="true"
                    android:visibility="gone"

                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:background="@color/MainBackground"
                    android:src="@mipmap/ic_cart_outline"
                    android:layout_gravity="center"/>

                <ImageButton
                    android:id="@+id/activity_category_product_add_to_wishlist_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:padding="1.5dp"
                    android:layout_weight=".5"
                    android:adjustViewBounds="true"
                     android:background="@color/MainBackground"
                    android:src="@mipmap/ic_wishlist_outline_disable" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>