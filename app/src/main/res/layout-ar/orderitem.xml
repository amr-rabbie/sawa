<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/item_clicked">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_clicked"
        android:id="@+id/free_shipping_text"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"


        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/profile_image_image"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/order"
                        android:layout_marginRight="2dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <solversteam.aveway.utiltes.TextViewWithFont
                                android:layout_width="match_parent"
                                android:text="تاريخ الطلب"
                                android:layout_weight="1"
                                android:textColor="?android:textColorHint"
                                android:layout_height="wrap_content" />
                            <solversteam.aveway.utiltes.TextViewWithFont
                                android:layout_width="match_parent"
                                android:text="Apr 19,2017"
                                android:layout_weight="1"
                                android:id="@+id/order_date"

                                android:textColor="?android:textColorHint"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"

                            android:layout_height="wrap_content">
                            <solversteam.aveway.utiltes.TextViewWithFont
                                android:layout_width="match_parent"
                                android:text="رقم الطلب"
                                android:layout_weight="1"
                                android:textColor="?android:textColorHint"
                                android:layout_height="wrap_content" />
                            <solversteam.aveway.utiltes.TextViewWithFont
                                android:layout_width="match_parent"
                                android:text="3749875465"
                                android:layout_weight="1"
                                android:id="@+id/order_id"

                                android:textColor="?android:textColorHint"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.4"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content">

                        <solversteam.aveway.utiltes.TextViewWithFont
                            android:layout_width="wrap_content"
                            android:text="الطلب بأسم"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="?android:textColorHint"
                            android:layout_height="wrap_content" />
                        <solversteam.aveway.utiltes.TextViewWithFont
                            android:layout_width="match_parent"
                            android:text="Ahmed Mohamed"
                            android:id="@+id/name"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:textColor="?android:textColorHint"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!--<solversteam.aveway.utiltes.TextViewWithFont-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="mohamd"-->
                    <!--android:maxLines="2"-->
                    <!--android:id="@+id/name"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="@color/Black"-->
                    <!--android:layout_gravity="start"-->

                    <!--android:layout_marginTop="8dp"/>-->
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <solversteam.aveway.utiltes.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="طريقة الدفع:"
                    android:layout_gravity="start"
                    android:textColor="?android:textColorHint"
                    android:layout_marginTop="8dp"/>
                <solversteam.aveway.utiltes.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash on Delivery"
                    android:id="@+id/status_order"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="start"
                    android:textColor="?android:textColorHint"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <solversteam.aveway.utiltes.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الاجمالي :"
                    android:id="@+id/shippingprice"
                    android:layout_gravity="start"
                    android:textColor="?android:textColorHint"
                    android:layout_marginTop="8dp"/>
                <solversteam.aveway.utiltes.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5200 EGP"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/price"
                    android:layout_gravity="start"
                    android:textColor="?android:textColorHint"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@color/light_green"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:id="@+id/details"
                        android:text="تفاصيل الطلب"
                        android:layout_height="25dp" />
                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <solversteam.aveway.utiltes.TextViewWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عدد المنتجات :"
                            android:id="@+id/description1"
                            android:layout_gravity="start|left"
                            android:clickable="true"
                            android:maxLines="1"
                            android:layout_marginStart="-3dp"
                            android:textColor="?android:textColorHint"
                            android:layout_marginLeft="-1dp" />
                        <solversteam.aveway.utiltes.TextViewWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 Items"
                            android:id="@+id/numerofproducts"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="right"
                            android:gravity="end|right"
                            android:clickable="true"
                            android:textColor="?android:textColorHint"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@color/avecolor"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:text="الغاء الطلب"
                        android:textSize="12dp"
                        android:id="@+id/cancelorder"
                        android:layout_height="25dp"
                      />

                    <TextView

                        android:text="@string/canceled"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"


                        android:textColor="@color/red"

                        android:textSize="@dimen/text"
                        android:id="@+id/canceled"
                        android:layout_height="25dp" />



                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <solversteam.aveway.utiltes.TextViewWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ميعاد الاستلام: "
                            android:id="@+id/description"
                            android:layout_gravity="start|left"
                            android:clickable="true"
                            android:maxLines="1"
                            android:layout_marginStart="-3dp"
                            android:textColor="?android:textColorHint"
                            android:layout_marginLeft="-1dp" />

                        <solversteam.aveway.utiltes.TextViewWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="june 23 ,2016"
                            android:id="@+id/estmatedate"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="right"
                            android:gravity="end|right"
                            android:clickable="true"
                            android:textColor="@color/avecolor"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
