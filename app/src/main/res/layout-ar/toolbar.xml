<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_green"
    android:fitsSystemWindows="true"
    android:minHeight="?actionBarSize"
     android:titleTextColor="@color/White"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:titleTextColor="@color/White">
    <LinearLayout
        android:id="@+id/titletool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_clicked"
        android:visibility="visible">

        <solversteam.aveway.utiltes.TextViewWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"

            android:layout_marginBottom="10dp"
            android:text=""
            android:textSize="19dp"


            android:textColor="@color/white"
            android:id="@+id/title"
            />        </LinearLayout>
    <LinearLayout
        android:id="@+id/toolbar_share_shopping_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left">

        <LinearLayout
            android:id="@+id/toolbar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_clicked"
            android:visibility="gone"
            android:layout_gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"                android:id="@+id/share"
                android:background="@mipmap/com_appboy_ic_share_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:focusable="true"
            android:layout_gravity="left"
            android:background="@drawable/item_clicked"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"                android:background="@mipmap/ic_search_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/item_clicked"
            android:layout_gravity="left"
            android:visibility="gone"

            >
             <solversteam.aveway.utiltes.TextViewWithFont
                android:id="@+id/textOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                 android:layout_alignParentTop="true"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                 android:layout_gravity="center"
                 android:visibility="invisible"
                 android:background="@drawable/badge_circle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textOne"

                android:background="@mipmap/com_appboy_ic_shopping_cart_white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_clicked"
            android:layout_gravity="left"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"                android:background="@mipmap/ic_mode_edit_white_24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toolbar_logout"
            android:layout_width="wrap_content"
            android:layoutDirection="rtl"
            android:focusable="true"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:background="@drawable/item_clicked"
            android:visibility="gone">

            <solversteam.aveway.utiltes.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"                android:textSize="16dp"
                android:text="تسجيل الخروج"
                android:layoutDirection="rtl"
                android:focusable="true"
                android:textColor="@color/White"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toolbar_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_clicked"
            android:layout_gravity="left"
            android:layoutDirection="rtl"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:focusable="true"
            android:visibility="gone"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
android:layout_gravity="top"
                android:src="@mipmap/ic_done_white_24dp"/>

            <solversteam.aveway.utiltes.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:text="@string/apply"
                android:id="@+id/apply"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"
                android:layoutDirection="rtl"
                android:focusable="true"

                android:textColor="@color/White"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>