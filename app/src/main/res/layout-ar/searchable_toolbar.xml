<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_margin="16dp"
    android:id="@+id/activity_searchable_toolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:imeOptions="actionSearch"
            android:background="@drawable/searchbghome"
            android:drawablePadding="6.0dip"
            android:hint="@string/FindBeastDeal"
             android:id="@+id/serachable_toolbar_edittext"
            android:padding="10dip"
            android:inputType="text"

            android:maxLines="1"

            android:tag="sticky"
            android:textColorHint="@color/textSub"
             android:textSize="@dimen/text"/>
        <ImageView
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_search_white_24dp"
            android:background="@drawable/item_clickedsearch"
            android:layout_gravity="center"
            android:scaleType="center"
            android:id="@+id/search_btn_search"
            android:tint="@color/white"
            android:layout_weight="4"
           />
    </LinearLayout>
</android.support.v7.widget.CardView>